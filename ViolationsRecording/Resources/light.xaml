<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--Разделители-->
    <Style TargetType="Separator">
        <Setter Property="Background" Value="Chocolate"/>
        <Setter Property="Foreground" Value="Chocolate"/>
    </Style>

    <Style TargetType="DockPanel" x:Key="VerticalSeparator">
        <Setter Property="Margin" Value="4"/>
        <Setter Property="Width" Value="1" />
        <Setter Property="Height" Value="auto" />
        <Setter Property="Background" Value="Chocolate" />
    </Style>
    <!--Разделители-->

    <!--Элементы контроля-->
    <Style TargetType="Button" x:Key="MenuButton">
        <Setter Property="Margin" Value="4"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Foreground" Value="DarkBlue"/>
    </Style>

    <Style TargetType="Button" x:Key="PopupButton">
        <Setter Property="Padding" Value="0,0,0,4"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Foreground" Value="DarkBlue"/>
    </Style>

    <Style TargetType="Border" x:Key="PopupBorder">
        <Setter Property="Background" Value="Beige"/>
        <Setter Property="BorderBrush" Value="Chocolate"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>
    <!--Элементы контроля-->

    <!--Меню-->
    <Style TargetType="Menu">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="BorderBrush" Value="Chocolate"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Foreground" Value="DarkBlue"/>
    </Style>
    <Style TargetType="MenuItem">
        <Setter Property="Background" Value="White"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>

    </Style>
    <!--Меню-->

    <!--Панель инструментов-->
    <Style TargetType="ToolBar">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Padding" Value="4"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="BorderBrush" Value="Chocolate"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Foreground" Value="DarkBlue"/>
    </Style>
    <!--Панель инструментов-->

    <!--Настройки контейнеров-->
    <Style TargetType="Grid" x:Key="MainGrid">
        <Setter Property="Background" Value="Wheat"/>
    </Style>
    <Style TargetType="Border" x:Key="MainBorder">
        <Setter Property="Background" Value="Wheat"/>
    </Style>
    <Style TargetType="StackPanel" x:Key="MenuStackPanel">
        <Setter Property="Background" Value="White"/>
    </Style>
    <Style TargetType="Border" x:Key="StackPanelBorder">
        <Setter Property="BorderBrush" Value="Chocolate"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Margin" Value="4"/>
    </Style>
    <!--Настройки контейнеров-->

    <!--Таб контроль-->
    <Style TargetType="TabControl">
        <Setter Property="Padding" Value="4"/>
        <Setter Property="Background" Value="Beige"/>
        <Setter Property="BorderBrush" Value="Chocolate"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Foreground" Value="DarkBlue"/>
    </Style>
    <Style TargetType="Border" x:Key="TabItemHeader">
        <Setter Property="Background" Value="Beige"/>
        <Setter Property="BorderBrush" Value="Chocolate"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="MinWidth" Value="80"/>
    </Style>
    <Style TargetType="TabItem">
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Margin" Value="0"/>
    </Style>
    <!--Таб контроль-->

    <!--Тааблица-->
    <Style TargetType="DataGrid">
        <Setter Property="Background" Value="White"/>
        <Setter Property="AlternatingRowBackground" Value="Beige"/>
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="HeadersVisibility" Value="Column"/>
    </Style>

    <Style TargetType="DataGridColumnHeader">
        <Setter Property="Background" Value="Wheat"/>
        <Setter Property="Foreground" Value="DarkBlue"/>
        <Setter Property="Padding" Value="4"/>
    </Style>
    
    <Style TargetType="DataGridRow">
        <Setter Property="Background" Value="Transparent"/>
    </Style>
    <Style TargetType="DataGridRowHeader">
        <Setter Property="Visibility" Value="Hidden"/>
    </Style>

    <Style TargetType="DataGridCell">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="DarkBlue"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Style.Triggers>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="LightBlue"/>
                <Setter Property="Foreground" Value="Black" />
                <Setter Property="BorderBrush" Value="#5050ff"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    <!--Тааблица-->
</ResourceDictionary>