<Window x:Class="ViolationsRecording.Views.DriversCardsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ViolationsRecording.Views"
        mc:Ignorable="d"
        Title="Карточки водителей" 
        
        Height="640" 
        Width="1200"
        
        WindowStartupLocation="CenterScreen"
        ShowInTaskbar="True"
        
        Loaded="Window_Load">

    <Window.Resources>
        <!-- Шаблон отображения карточки водителей -->
        <DataTemplate x:Key="DataDriverTemplate">
            <GroupBox Padding="5" 
                      Margin="10"
                      BorderBrush="Black" 
                      BorderThickness="0.8"
                      Width="250">

                <GroupBox.Header>
                    <TextBlock FontFamily="Verdna"
                               FontSize="16"
                               Text="{Binding Path=Id, StringFormat=Клиент ид: {0}}"/>
                </GroupBox.Header>

                
                <StackPanel Margin="10" Orientation="Vertical">

                    <!-- выводим фото водителя -->
                    <Image Width="180" 
                           Height="180" 
                           Source="{Binding Path=Person.PhotoPath}" />


                    <TextBlock FontSize="16"
                                TextWrapping ="Wrap"
                               Text="{Binding Path=Person.FullName, StringFormat=ФИО водителя: {0}}"/>

                    <TextBlock FontSize="14" 
                               TextWrapping ="Wrap"
                               Text="{Binding Path=Person.Passport, StringFormat=Паспорт: {0}}"/>
                </StackPanel>
            </GroupBox>

        </DataTemplate>
    </Window.Resources>

    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="80*"/>
        </Grid.RowDefinitions>

        <TextBlock FontFamily="Verdana"
                   FontSize="22"
                   Margin="10"
                   HorizontalAlignment="Center">
            Водители
        </TextBlock>

        <ListBox Grid.Row="1" x:Name="LbxDriversCards"
                 Margin="10"
                 Padding="10"
                 BorderBrush="Black"
                 BorderThickness="1"

                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 ItemTemplate="{StaticResource DataDriverTemplate}">

            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal" Margin="10" />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>

        </ListBox>
    </Grid>
</Window>
