<Window x:Class="ViolationsRecording.Views.ViolationFactWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ViolationsRecording.Views"
        mc:Ignorable="d"
        Title="ViolationFactWindow" Height="auto" Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        SizeToContent="Height"
        FontSize="16"
        FontFamily="Consoles">
    <Grid Style="{DynamicResource MainGrid}">
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0">Водитель:</Label>

        <ComboBox Name="CbxDriver" Grid.Row="0" Grid.Column="1" 
		         SelectedItem="{Binding Driver}"
                 HorizontalContentAlignment="Left"
                 Padding="4"/>

        <Label Grid.Row="1" Grid.Column="0">Машина:</Label>
        <ComboBox Name="CbxCar" Grid.Row="1" Grid.Column="1" 
		         SelectedItem="{Binding Car}"
                 HorizontalContentAlignment="Left"
                 Padding="4"/>

        <Label Grid.Row="2" Grid.Column="0">Тип нарушения:</Label>
        
        <ComboBox Name="CbxViolationType" Grid.Row="2" Grid.Column="1"
                  SelectedItem="{Binding ViolationType}"
                  HorizontalContentAlignment="Left"
                  Padding="4"/>

        <Label Grid.Row="3" Grid.Column="0">Дата фиксации:</Label>
        <DatePicker Grid.Row="3" Grid.Column="1"
                    Name="DpStart" 
                    SelectedDate="{Binding FixationDate}"
                    Padding="4"/>

        <!-- управление -->
        <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
                    Orientation="Horizontal" Margin="4,12,4,4"
                    HorizontalAlignment="Right">
            <Button Content="ОК"
                    Padding="16,4"
                    IsDefault="True"
                    Background="GreenYellow"
                    BorderBrush="ForestGreen"
                    Click="OK_Click"/>
            <Button Content="Отмена"
                    Padding="16,4"
                    Margin="8,0,0,0"
                    FontWeight="Black"
                    IsCancel="True"
                    Background="Red"
                    BorderBrush="Firebrick"/>
        </StackPanel>
    </Grid>

</Window>
